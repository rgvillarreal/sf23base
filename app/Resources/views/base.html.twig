<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block description %}{% endblock description %}">
        <meta name="author" content="Rodrigo Villarreal">
        <title>{% block title %}{% endblock title %}</title>
        {% stylesheets '@bootstrap_less' '@bootstrap_theme' '@fa_css' combine=true %}
          <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <link href="{{ asset('bundles/rgvsite/css/ie10-viewport-bug-workaround.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock stylesheets %}
        {% block favicon %}<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />{% endblock favicon %}
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% block body %}{% endblock body %}
        {% javascripts '@jquery_js' '@bootstrap_js' filter='?yui_js' combine=true %}
           <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="{{ asset('bundles/rgvsite/js/ie10-viewport-bug-workaround.js') }}"></script>
        {% block javascripts %}{% endblock javascripts %}
    </body>
</html>
